<!DOCTYPE html>
<html lang="en">    
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
</head>    
<body>
    <div class="container">
        <div style="background-color: coral; position: absolute; top: 0; left: 0; right: 0;">
            <p style="text-align: center; font-size: 3rem;">EMPLOYEE MANAGEMENT SYSTEM</p>
            <p style="text-align: center;">Welcome to EMP system</p>
        </div>
        <div class="card" style="position: absolute; top: 25%; left: 25%; right: 25%;">
            <div class="card-body">
                <%
                    if(empData.length > 0)
                    {
                        empData.forEach( (data) => { %>

                            <form method="POST" action="/ems/editEmployee">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Name</label>
                                            <input type="text" name="name"  value="<% empData.name>" id="username" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Designation</label>
                                            <input type="text" name="desig" value="<% empData.desig>" id="password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Department</label>
                                            <input type="text" name="desig" value="<% empData.dept>" id="password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Email</label>
                                            <input type="email" name="email" value="<% empData.email>" id="password" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label>Contact</label>
                                            <input type="number" name="contact" value="<% empData.contact>" id="email" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Submit" />
                                </div>
                            </form>    

                    <% }); } 
                %>
            </div>
        </div>
    </div>        
</body>
</html>